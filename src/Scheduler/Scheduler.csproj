<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452;net462</TargetFrameworks>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <PropertyGroup>
    <VersionPrefix>0.1.0</VersionPrefix>

    <Description>A simple C# scheduler with test implementation.
      
Scheduler is a simple C# implementation of a scheduler that support recurring events and unit testing with "Time travel".</Description>
    <PackageId>SharpScheduler</PackageId>
    <Summary>A simple C# scheduler with test implementation</Summary>
    <PackageTags>scheduler;simple;c#</PackageTags>
    <PackageReleaseNotes>Add .NET Core support</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/kthompson/scheduler</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/kthompson/scheduler/master/LICENSE.md</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/kthompson/scheduler.git</RepositoryUrl>
  </PropertyGroup>
</Project>
